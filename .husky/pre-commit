# Run linting
echo "ğŸ“ Linting code..."
npm run lint:fix || {
  echo "âŒ Linting failed. Please fix the errors and try again."
  exit 1
}

# Run type checking
echo "ğŸ” Type checking..."
npx tsc --noEmit || {
  echo "âŒ Type checking failed. Please fix the type errors and try again."
  exit 1
}

# Run formatting
echo "âœ¨ Formatting code..."
