{
  "name": "passportx",
  "version": "1.0.0",
  "description": "PassportX Achievement Passport",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "test": "npm run test:unit && npm run test:contracts",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:contracts": "clarinet test",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:all": "npm run lint && npm run test:coverage && npm run test:e2e",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "quality:check": "sonar-scanner"
  },
  "dependencies": {
    "@hirosystems/chainhook-client": "^2.4.0",
    "@stacks/connect": "^7.0.0",
    "@stacks/network": "^6.0.0",
    "@stacks/transactions": "^6.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.300.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "coveralls": "^3.1.0",
    "cypress": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "postcss": "^8.4.0",
    "prettier": "^2.8.0",
    "sonar-scanner": "^3.1.0",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
